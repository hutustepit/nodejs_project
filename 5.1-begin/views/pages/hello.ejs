
<% include ../partials/meta.ejs %>
<title>Formular</title>
<% include ../partials/header.ejs %>
<div class="row">
  <div class="col-md-6">
    <h1>Hello Page</h1>
    <% if ( Object.keys(errors).length > 0 ){ %>
      <div class="alert alert-danger" role="alert">
        <p>Au aparut urmatoarele erori:</p>
        <ul>
          <% Object.values(errors).forEach(error => { %>
          <li>
            <%= error.msg %>
          </li>
          <% }) %>
        </ul>
      </div>
    <%        
      }
    %>
    <form action="/hello" method="POST" enctype="multipart/form-data" >
      <div class="form-group">
        <label for="nume">Nume</label>
        <input type="text" name="nume" id="nume" class="form-control <%= errors.nume ? 'is-invalid' : ''%>" value="<%= data.nume %>">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control <%= errors.email ? 'is-invalid' : ''%>" value="<%= data.email %>">
      </div>
      <div class="form-group">
        <label for="foto">Fotografie</label>
        <input type="file" name="foto" id="foto">
      </div>
      <div id="info"></div>
      <button type="submit" class="btn">Submit</button>
      
    </form>
  </div>
</div> <!-- row -->
<script src="static/js/uploads.js"></script>
<% include ../partials/footer.ejs %>